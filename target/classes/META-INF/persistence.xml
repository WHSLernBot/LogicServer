<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="LernServletPU" transaction-type="RESOURCE_LOCAL">
    <!--<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>-->
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>entitys.Antwort</class>
    <class>entitys.Token</class>
    <class>entitys.Aufgabe</class>
    <class>entitys.XGAufgabe</class>
    <class>entitys.BeAufgabe</class>
    <class>entitys.Adresse</class>
    <class>entitys.Modul</class>
    <class>entitys.Teilnahme</class>
    <class>entitys.Plattform</class>
    <class>entitys.Uni</class>
    <class>entitys.LernStatus</class>
    <class>entitys.Bewertung</class>
    <class>entitys.ZuAufgabe</class>
    <class>entitys.Benutzer</class>
    <class>entitys.Statistik</class>
    <class>entitys.Klausur</class>
    <class>entitys.Thema</class>
    <class>entitys.Pruefungsperiode</class>
    <properties>
      <property name="hibernate.archive.autodetection" value="class"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
