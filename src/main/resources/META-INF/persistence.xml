<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="LernServletPU" transaction-type="RESOURCE_LOCAL">
    <!--<provider>org.apache.openjpa.persistence.PersistenceProviderImpl</provider>-->
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>Entitys.Antwort</class>
    <class>Entitys.Aufgabe</class>
    <class>Entitys.BeAufgabe</class>
    <class>Entitys.Benutzer</class>
    <class>Entitys.Klausur</class>
    <class>Entitys.LernStatus</class>
    <class>Entitys.Modul</class>
    <class>Entitys.Plattform</class>
    <class>Entitys.Teilnahme</class>
    <class>Entitys.Thema</class>
    <class>Entitys.Token</class>
    <class>Entitys.Uni</class>
    <class>Entitys.Pruefungsperiode</class>
    <class>Entitys.Statistik</class>
    <class>Entitys.ZuAufgabe</class>
    <class>Entitys.XGAufgabe</class>
    <class>Entitys.Adresse</class>
    <class>Entitys.Bewertung</class>
    <properties>
      <property name="hibernate.archive.autodetection" value="class"/>
      <property name="hibernate.show_sql" value="false"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
